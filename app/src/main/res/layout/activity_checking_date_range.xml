<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.checkingDateRange">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="296dp"
        android:layout_height="57dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/romanesco"
        android:text="Choose Attempts Report Dates"
        android:textColor="#171717"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_datefromA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_datefromA"
        android:layout_width="256dp"
        android:layout_height="38dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="serif"
        android:hint="From"
        android:textColorHighlight="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_datetoA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/tv_datetoA"
        android:layout_width="256dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="serif"
        android:hint="To"
        android:textColorHighlight="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/spinner_checkin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_datefromA" />

    <Button
        android:id="@+id/btn_generate"
        android:layout_width="189dp"
        android:layout_height="41dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="121dp"
        android:background="#DEE2E4"
        android:text="Generate"
        android:textColor="#161617"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_checkin" />

    <Spinner
        android:id="@+id/spinner_checkin"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="32dp"
        android:dropDownWidth="match_parent"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/btn_generate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_datetoA" />
</androidx.constraintlayout.widget.ConstraintLayout>